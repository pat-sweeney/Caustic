struct VSInput
{
    float3 pos : POSITION;
};

struct VSOutput
{
    float4 pos : SV_POSITION;
};

cbuffer VS_CONSTANT_BUFFER : register(b0)
{
    float4 color;
};

float4 PS(VSOutput p) : SV_Target
{
    return color;
}
